<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_margin="15dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/board_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="board_no" />

                <TextView
                    android:id="@+id/board_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="board_subject" />

                <TextView
                    android:id="@+id/board_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="board_date" />

                <TextView
                    android:id="@+id/board_hit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="board_hit" />

                <RelativeLayout
                    android:id="@+id/relativeLayout_expandable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/board_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="board_content" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
