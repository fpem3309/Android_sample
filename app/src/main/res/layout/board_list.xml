<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
               android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/board_no"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="board_no"
                    android:textColor="#FFA51F"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/board_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="3dp"
                    android:textSize="20sp"/>

                <ImageButton
                    android:id="@+id/btn_answer"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="#ffffff"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="3dp"/>

            </LinearLayout>

                <TextView
                    android:id="@+id/board_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="board_subject"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/board_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="board_date"
                    android:gravity="center"/>

                <RelativeLayout
                    android:id="@+id/relativeLayout_expandable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/board_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="board_content" />
                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
